{# empty Twig template #}
<div class="body-contain">
                <!--   /*La etiqueta fieldset>se utiliza para agrupar elementos relacionados en un formulario. y dibuja una caja alrededor de los elementos relacionados. */-->
                <fieldset>
                      <legend>Editar Cliente</legend>
                 
                    <form name="formeditar"  method="POST" > 
                     <input type="hidden" value="1" name="guardar" />
                        <p> <label>Nombre:</label> <input type="text" name="nombre"  id="nombre" value="{{parametros.datoscliente.nombre}}"/> </p>
                        
                        <p><label> Apellido:</label> <input type="text" name="apellido" id="apellido" value="{{parametros.datoscliente.apellido}}"/> </p>
                       
                        <p><label> CUIT:</label> <input type="text"   name="cuit"  id="cuit" value="{{parametros.datoscliente.cuit}}"/> </p>
                       
                        <p><label>Mail:</label> <input type="text"  name="correo"  id="correo" value="{{parametros.datoscliente.mail}}"  /> </p>
                       
                        <p><label>Direccion:</label> <input type="text" name="domicilio"  id="domicilio" value="{{parametros.datoscliente.direccion}}"  /> </p>
                      
                        <p><label> Razon social:</label> <input type="text"  name="rsocial"  id="rsocial" value="{{parametros.datoscliente.razonsocial}}"/> </p>
                          
                        <p><label>Condicion impositiva:</label> <input type="text"  name="condimpositiva"  id="condimpositiva" value="{{parametros.datoscliente.condimpositiva}}"  /> </p> 
                      
                           <button type="submit"  > Guardar Cambios</button>
                         <input type="button" title="Volver" value="volver" onclick="window.location.href='{{home}}admin/clientes'"/>       
                     
             
                   
                    </form>   

                  {%if parametros.mensaje is defined%}
                    <div class="mensaje">     {{ parametros.mensaje }} </div>
                    {%endif%}
                  
                </fieldset>
            </div>