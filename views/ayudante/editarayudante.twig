<div class="body-contain">
    <!--   /*La etiqueta fieldset>se utiliza para agrupar elementos relacionados en un formulario. y dibuja una caja alrededor de los elementos relacionados. */-->
    <fieldset>
        <legend>Editar Ayudante</legend>

        <form name="formeditar"  method="POST" action=""> 
            <input type="hidden" value="1" name="guardar" />
            <p> <label>Nombre:</label> <input type="text" name="nombre"  id="nombre" value="{{parametros.datosayudante.nombre}}"/> </p>

            <p><label> Apellido:</label> <input type="text" name="apellido" id="apellido" value="{{parametros.datosayudante.apellido}}"/> </p>


            <button type="submit"  > Guardar Cambios</button>
            <input type="button" title="Volver" value="volver" onclick="history.back();"/>       



        </form>   

                  {%if parametros.mensaje is defined%}
        <div class="mensaje">     {{ parametros.mensaje }} </div>
                    {%endif%}

    </fieldset>
</div